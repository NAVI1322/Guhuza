generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  role       Role      // Enum for JOB_SEEKER, RECRUITER, STAFFING_FIRM
}

enum Role {
  JOB_SEEKER
  RECRUITER
  STAFFING_FIRM
}
